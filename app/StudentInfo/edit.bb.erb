<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @studentinfo.object %>
    <h1>Edit <%= @studentinfo.name%></h1>
    <%= link_to "Delete", :action => :delete, :id => @studentinfo.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @studentinfo.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Name: </td>
              <td class="itemValue"><input type="text" name="studentinfo[name]" value="<%= @studentinfo.name %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Zip: </td>
              <td class="itemValue"><input type="text" name="studentinfo[zip]" value="<%= @studentinfo.zip %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Exam: </td>
              <td class="itemValue"><input type="text" name="studentinfo[exam]" value="<%= @studentinfo.exam %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Subject: </td>
              <td class="itemValue"><input type="text" name="studentinfo[subject]" value="<%= @studentinfo.subject %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
