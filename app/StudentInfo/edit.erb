<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @studentinfo.name %></h1>
    <a href="<%= url_for :action => :show, :id => @studentinfo.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @studentinfo.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @studentinfo.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="studentinfo[name]" class="fieldLabel">Name</label>
            <input type="text" id="studentinfo[name]" name="studentinfo[name]" value="<%= @studentinfo.name %>" <%= placeholder( "Name" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="studentinfo[zip]" class="fieldLabel">Zip</label>
            <input type="text" id="studentinfo[zip]" name="studentinfo[zip]" value="<%= @studentinfo.zip %>" <%= placeholder( "Zip" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="studentinfo[exam]" class="fieldLabel">Exam</label>
            <input type="text" id="studentinfo[exam]" name="studentinfo[exam]" value="<%= @studentinfo.exam %>" <%= placeholder( "Exam" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="studentinfo[subject]" class="fieldLabel">Subject</label>
            <input type="text" id="studentinfo[subject]" name="studentinfo[subject]" value="<%= @studentinfo.subject %>" <%= placeholder( "Subject" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
